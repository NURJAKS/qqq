# Application Settings
APP_NAME=Alumni Club Connect
DEBUG=False
ENVIRONMENT=production

# Security Settings
SECRET_KEY=your_super_secret_key_here_minimum_32_characters_long
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
PASSWORD_MIN_LENGTH=8

# Database Configuration
DATABASE_URL=sqlite:///./data/alumni_club.db
DB_ECHO=False

# Email Configuration for Certificate Sending
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USE_TLS=True
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_FROM_NAME=Alumni Club Connect

# File Upload Settings
MAX_FILE_SIZE_MB=10
ALLOWED_IMAGE_EXTENSIONS=png,jpg,jpeg,gif

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MINUTES=15

# CORS Settings
ALLOWED_ORIGINS=http://localhost:8501,http://127.0.0.1:8501

# Certificate Settings
CERTIFICATE_HOURS_THRESHOLD=300
AUTO_SEND_CERTIFICATES=True
